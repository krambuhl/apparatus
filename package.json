{
  "name": "apparatus",
  "version": "1.0.0",
  "description": "Tools for creating design systems and component-based websites",
  "scripts": {
    "build": "webpack --config ./build/webpack.config.js --mode development",
    "production": "webpack --config ./build/webpack.config.prod.js --progress --mode production",
    "dev": "webpack-dev-server --config ./build/webpack.config.dev.js --hot --progress --mode development",
    "start": "serve dist --port 8080",
    "test": "tape **/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krambuhl/apparatus.git"
  },
