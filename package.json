    "component",
    "vue",
    "build+tools"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krambuhl/apparatus/issues"
  },
  "homepage": "https://github.com/krambuhl/apparatus#readme",
  "dependencies": {
    "extract-text-webpack-plugin": "next",
    "vue": "^2.5.16",
    "vue-head": "^2.0.12"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-loader": "^7.1.4",
    "babel-preset-vue-app": "^2.0.0",
    "css-loader": "^0.28.11",
    "frontmatter-loader": "^0.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.7",
    "loader-utils": "^1.1.0",
